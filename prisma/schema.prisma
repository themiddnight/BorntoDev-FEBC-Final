generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model categories {
  id      Int       @id @default(autoincrement())
  title   String    @unique
  courses courses[]
}

model courses {
  id            Int        @id @default(autoincrement())
  title         String
  description   String
  category_id   Int
  thumbnail_url String
  video_url     String
  category      categories @relation(fields: [category_id], references: [id])
  lectures      lectures[]

  @@index([category_id])
}

model lectures {
  id        Int     @id @default(autoincrement())
  title     String
  duration  Int
  video_url String
  course_id Int
  course    courses @relation(fields: [course_id], references: [id])

  @@index([course_id])
}
