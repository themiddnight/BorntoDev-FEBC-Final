generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("NEXT_PUBLIC_DATABASE_URL")
  relationMode = "prisma"
}

model categories {
  id      Int       @id @default(autoincrement()) @unique
  title   String
  courses courses[]
}

model courses {
  id            Int        @id @default(autoincrement()) @unique
  title         String
  description   String
  category_id   Int
  thumbnail_url String
  video_url     String
  category      categories @relation(fields: [category_id], references: [id], onDelete: Cascade)
  lectures      lectures[]

  @@index([category_id])
}

model lectures {
  id        Int     @id @default(autoincrement()) @unique
  course_id Int
  title     String
  duration  Int
  video_url String
  course    courses @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@index([course_id])
}
